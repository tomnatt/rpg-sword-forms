<h1 class="display-5">Tags</h1>

<p class="lead">
<%- if signed_in? -%>
  <%= link_to 'New tag', new_tag_path, id: 'add-tag' %> |
<%-end -%>
<%= link_to 'Sword forms', sword_forms_path %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag %></td>
        <td>
          <%- if signed_in? -%>
            <%= link_to 'Edit', edit_tag_path(tag) %>
          <%-end -%>
        </td>
        <td>
          <%- if signed_in? -%>
            <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%-end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
